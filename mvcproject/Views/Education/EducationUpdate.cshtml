@model mvcproject.Enitiy.Education

<head>

</head>

<div style="width: 600px; height:fit-content; margin:auto; background: #0c1e35 ; box-shadow: 0 0 5px black; border-radius: 20px; padding: 100px;">
    <form asp-action="UpdateEducation" asp-controller="Education">
        <input name="id" value="@Model.Id" type="hidden"/>
        <input name="Tranding" value="@Model.Tranding" type="text" class="form-control mt-3" placeholder="Title" />
        <input class="form-control mt-3" name="Description" value="@Model.Description" placeholder="Description" />
        <input class="form-control mt-3" name="courseСompletion" value="@Model.courseСompletion[0]" placeholder="Complet " />
        <input class="form-control mt-3" name="courseСompletion" value="@Model.courseСompletion[1]" placeholder="Complet " />
        <input class="form-control mt-3" name="courseСompletion" value="@Model.courseСompletion[2]" placeholder="Complet " />
        <input class="form-control mt-3" name="courseСompletion" value="@Model.courseСompletion[3]" placeholder="Complet " />
        <input class="form-control mt-3" name="courseСompletion" value="@Model.courseСompletion[4]" placeholder="Complet " />
        <div class="d-flex justify-content-between align-items-center">
            <button asp-action="UpdateEducation" asp-controller="Education" class="btn btn-outline-warning mt-4">Update Education</button>
        </div>
    </form>
    <form action="@Url.Action("GetEducation", "Education")">
        <button asp-action="GetEducation" asp-controller="Education" type="submit" class="btn btn-outline-primary mt-4">Cancel</button>
    </form>
</div>