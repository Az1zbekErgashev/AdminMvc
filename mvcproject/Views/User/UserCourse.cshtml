@model List<mvcproject.Dto.CourseDto>

<head>

</head>
<div>
    <div class="d-flex justify-content-center position-absolute top-0 align-items-center end-0" style="height: 70px; box-shadow: 0 0 3px grey; left: 300px;">
        <form action="@Url.Action("GetUsers", "User")">
            <button asp-action="GetUsers" asp-controller="User" class="btn btn-outline-primary">Cancel</button>
        </form>
    </div>
    <div class="row">
        @foreach (var iteam in Model)
        {
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="@iteam.Url" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">@iteam.Id @iteam.Name</h5>
                        <p class="card-text">@iteam.Description</p>
                        <p class="card-text fw-bold">Price : @iteam.Price $</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <form action="@Url.Action("GetById", "Course")">
                                <input type="hidden" value="@iteam.Id" name="id"/>
                                <button class="btn btn-outline-success" asp-action="GetById" asp-controller="Course">Edit Course</button>
                            </form>
                            <form action="@Url.Action("DeleteCourse", "Course")">
                                <input type="hidden" value="@iteam.Id" name="id"/>
                                <button class="btn btn-outline-danger" asp-action="DeleteCourse" asp-controller="Course">Delete Course</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
