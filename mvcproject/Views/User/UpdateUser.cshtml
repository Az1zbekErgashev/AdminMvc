@model mvcproject.Enitiy.User

<head>

</head>

<div style="width: 600px; height:fit-content; margin:auto; background: #0c1e35 ; box-shadow: 0 0 5px black; border-radius: 20px; padding: 100px;">
    <form asp-action="UpdateUser" asp-controller="User">
        <input name="id" value="@Model.Id" type="hidden"/>
        <input name="email" value="@Model.Email" type="email" class="form-control mt-3" placeholder="Email" />
        <input class="form-control mt-3" name="fullname" value="@Model.FullName" placeholder="Name" />
        <input class="form-control mt-3" name="password" value="@Model.Password" placeholder="Password" />
        <div class="d-flex justify-content-between align-items-center">
            <button asp-action="UpdateUser" asp-controller="User" class="btn btn-outline-warning mt-4">Update User</button>
        </div>
    </form>
    <form action="@Url.Action("GetUsers", "User")">
        <button asp-action="GetUsers" asp-controller="User" type="submit" class="btn btn-outline-primary mt-4">Cancel</button>
    </form>
</div>
    
    
