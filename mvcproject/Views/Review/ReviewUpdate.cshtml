@model mvcproject.Enitiy.Review

<head>

</head>

<div style="width: 600px; height:fit-content; margin:auto; background: #0c1e35 ; box-shadow: 0 0 5px black; border-radius: 20px; padding: 100px;">
    <form asp-action="UpdateReview" asp-controller="Review">
        <input name="id" value="@Model.Id" type="hidden" />
        <input name="Course_info" value="@Model.Course_info"  class="form-control my-3" placeholder="Course info" />
        <input class="form-control my-3" name="Course_name" value="@Model.Course_name" placeholder="Course name" />
        <input name="comment"  class="form-control my-3" name="Title" value="@Model.comment" placeholder="Comment" />
        <input class="form-control my-3" name="TaskId" placeholder="Task Id" />
         

        <div class="d-flex justify-content-between align-items-center">
            <button asp-action="UpdateReview" asp-controller="Review" class="btn btn-outline-warning mt-4">Update Review</button>
        </div>
    </form>
    <form action="@Url.Action("GetTask", "Task")">
        <button asp-action="GetReview" asp-controller="Review" type="submit" class="btn btn-outline-primary mt-4">Cancel</button>
    </form>
</div>