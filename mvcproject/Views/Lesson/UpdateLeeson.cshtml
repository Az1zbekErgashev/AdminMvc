@model mvcproject.Enitiy.Lessons



<head>

</head>

<div style="width: 600px; height:fit-content; margin:auto; background: #0c1e35 ; box-shadow: 0 0 5px black; border-radius: 20px; padding: 100px;">
    <form asp-action="UpdateLesson" asp-controller="Lesson">
        <input name="id" value="@Model.Id" type="hidden"/>
        <textarea name="Description" value="@Model.Description" type="text" class="form-control mt-3" placeholder="Name Course">
            @Model.Description
          </textarea>
        <input class="form-control mt-3" name="title" value="@Model.Title" placeholder="Title"  />
        <input class="form-control mt-3" name="Vedeo_url2" value="@Model.Vedeo_url2" placeholder="Video 2" />
        <input class="form-control mt-3" name="Video_url" value="@Model.Video_url" type="text" placeholder="Video 1" />
        <input class="form-control mt-3" name="CourseId" type="text" placeholder="Course Id" />
        <div class="d-flex justify-content-between align-items-center">
            <button asp-action="UpdateLesson" asp-controller="Lesson" class="btn btn-outline-warning mt-4">Update Lesson</button>
        </div>
    </form>
    <form action="@Url.Action("GetLesson", "Lesson")">
        <button asp-action="GetLesson" asp-controller="Lesson" type="submit" class="btn btn-outline-primary mt-4">Cancel</button>
    </form>
</div>